@import '00_variables.styl'
@import 'nib'

#messages
    absolute top bottom left right
    background white
    margin 58px 0

#title
    text-align center
    position absolute
    top 0
    left 0
    right 0
    line-height 65px
    font-size 20px
    font-weight 100
    text-transform uppercase
    pointer-events none
    margin 0 60px
    text-overflow ellipsis
    overflow hidden

.container
    position relative
    width 100%
    margin 0 auto
    max-width 800px

#message
    position fixed
    bottom 0
    left 0
    right 0
    z-index 2
    background #f0f0f0
    textarea[type="text"]
        padding 10px 120px 10px 20px
        width 100%
    #submit
        position absolute
        right 0
        top 0
        width 100px
        height 100%
        text-align center
        font-weight 100
        font-size 21px
        line-height 50px
