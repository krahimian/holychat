@import '00_variables.styl'
@import 'nib'

html
    text-size-adjust 100%

body
    position absolute
    width 100%
    height 100%
    overflow hidden
    font-family 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
    font-size 14px
    font-weight 300
    color $text

main
    position relative
    z-index 1
    background $bg
    max-width 800px
    margin 0 auto 59px
    padding 15px
