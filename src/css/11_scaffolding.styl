@import '00_variables.styl'
@import 'nib'

html
    text-size-adjust 100%

body
    absolute top bottom left right
    overflow hidden
    font-family 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
    font-size 14px
    font-weight 300
    color $text

main
    absolute top bottom left right
    z-index 1
    background $bg

.empty-container
    padding 20px 10px
    font-size 14px
    text-align center
    font-family jaf-bernino-sans,"Lucida Grande","Lucida Sans Unicode","Lucida Sans",Geneva,Verdana,sans-serif
    font-weight 700
    font-style normal
    text-transform uppercase
    font-size 9px
    letter-spacing .1em
    color rgba(0,0,0,.3)
    word-break break-all
    &:before
        content ""
        display inline-block
        width 70px
        margin-bottom 10px
        border-top 1px solid #f0f0f0

#overlay
    absolute top bottom left right
    z-index 1000
    display none

#sidebar
    fixed top bottom left
    width 280px
    color rgba(255,255,255,0.65)
    padding-top 20px
    form
        padding 0 70px 0 20px
        .submit
            absolute right 20px

#toolbar
    fixed top left right
    width auto
    z-index 5
    background white
    border-bottom 1px solid $border
    height 58px
    padding 0 15px

#sidebar-icon
    border none
    padding 0 10px
    margin 0
    &:before
    &:after
    .sidebar-icon-text
        background #999
        content ''
        display block
        height 2px
        margin 6px 0
        transition all .2s ease-out
        width 24px

.sidebar-open #sidebar-icon
    &:before
        transform rotate(45deg) translate3d(3px,7px,0)
    .sidebar-icon-text
        opacity 0
    &:after
        transform rotate(-45deg) translate3d(4px,-9px,0)

.sidebar-open
    #toolbar
    #messages
    #overlay
    #message
        display block
        transform translate3d(280px, 0, 0)