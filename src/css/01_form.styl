@import '00_variables.styl'
@import 'nib'

form
    position relative

input
textarea
    width 100%
    border-radius 0
    border none
    background-color transparent
    box-shadow none
    font-weight 300
    padding 10px 0 10px 0px
    margin 0
    &.pill
        padding 10px
        background white
        border 1px solid $border
        border-radius 2px
    &:hover
    &:focus
        box-shadow none
        outline none
    &.ng-invalid.ng-dirty
        border-color $red
    &.ng-valid.ng-dirty
        border-color $green
